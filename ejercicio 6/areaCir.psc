Proceso areaCir
	Definir area Como Real;
	Definir radio Como real;
	Definir radCuad Como Real;
	Escribir 'Ingrese el radio de la circunferencia:';
	Leer radio;
	radCuad <- radio*radio;
	area <- 3.1416*radCuad;
	Escribir 'El area de la circunferencia con un radio de', radio, 'equivale a:', area;
FinProceso
